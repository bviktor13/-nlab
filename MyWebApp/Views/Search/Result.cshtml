@using MyWebApp.Models.SearchViewModels
@using MyWebAppDal.Models
@using MyWebAppDal.DTO

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    IEnumerable<CityDto> cities = ViewData["Cities"] as IEnumerable<CityDto>;
    string[] images = ViewData["Images"] as string[];

}


@model ResultHouseViewModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .myborder {
        border: 5px solid #772953;
    }
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .title {
        color: grey;
        font-size: 18px;
    }




    button:hover, a:hover {
        opacity: 0.7;
    }
</style>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link href="~/css/site.css" rel="stylesheet" />


<h2 class="header border myborder" >@cities.ElementAt(Model.houseDetails.CityId.Value - 1).Name, @Model.houseDetails.Street , @Model.houseDetails.HouseNumber.</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            @for (int i = 0; i < images.Count(); i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/HouseUploads/@Model.houseDetails.Id/@Model.houseDetails.Image" alt="Los Angeles" style="width:100%;">
            </div>


            @foreach (var image in images)
    {
        <div class="item">
            <img src="~/HouseUploads/@Model.houseDetails.Id/@image" alt="@image.ToString()"style="width:100%;">
        </div>
}
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">
        <div class="col-sm-4">
            @if (Model.houseDetails.ForSaleType.Value == ForSaleType.Elado)
        {
            <h2 class="myborder"><center>@Model.houseDetails.Price MFt </center></h2>
    }
    else
    {
        <h2 class="myborder"><center>@Model.houseDetails.Price Ft/hó </center> </h2>
}
        </div>
        <div class="col-sm-4">
            <h2 class="myborder"><center>@Model.houseDetails.Area m²</center></h2>
        </div>

        <div class="col-sm-4">
            @if (Model.houseDetails.RoomNumber != 0 && Model.houseDetails.PartyRoomNumber != 0)
    {
        <h2 class="myborder">@Model.houseDetails.RoomNumber + @Model.houseDetails.PartyRoomNumber félszoba </h2>
}
else if (Model.houseDetails.RoomNumber != 0 && Model.houseDetails.PartyRoomNumber == 0)
{
        <h2 class="myborder">@Model.houseDetails.RoomNumber szoba </h2>
}
else if (Model.houseDetails.RoomNumber == 0 && Model.houseDetails.PartyRoomNumber != 0)
{
        <h2 class="myborder">@Model.houseDetails.PartyRoomNumber félszoba </h2>
}
else if (Model.houseDetails.RoomNumber == 0 && Model.houseDetails.PartyRoomNumber == 0)
{
        <h2 class="myborder"> Nincs megadva</h2>
}
        </div>

    </div>

<pr></pr>

        <div class="row">
            <form class="form-horizontal" method="post" enctype="multipart/form-data">
                <div class="col-sm-4">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Eladó/Kiadó:</label>
                        <div class="col-sm-5">
                            @Model.houseDetails.ForSaleType
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Háztípus:</label>
                        <div class="col-sm-5">
                            @Model.houseDetails.HouseType
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Fűtés:</label>
                        <div class="col-sm-5">
                            @Model.houseDetails.HeatingType
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Belmagasság:</label>
                        <div class="col-sm-5">
                            @Model.houseDetails.InnerHeightType
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Bútorozott:</label>
                        <div class="col-sm-5">
                            @if (Model.houseDetails.Furnished == true)
                        {
                            <div> Igen </div>
                    }
                    else
                    {
                        <div>Nem</div>
                }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 " for="">Háziállat:</label>
                        <div class="col-sm-5">
                            @if (Model.houseDetails.Animal == true)
                        {
                            <div> Engedett </div>
                    }
                    else
                    {
                        <div>Nem megengedett</div>
                }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Erkély:</label>
                        <div class="col-sm-5">
                            @if (Model.houseDetails.Balcony == true)
                        {
                            <div> Van </div>
                    }
                    else
                    {
                        <div>Nincs</div>
                }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Lift:</label>
                        <div class="col-sm-5">
                            @if (Model.houseDetails.Elevator == true)
                        {
                            <div> Van </div>
                    }
                    else
                    {
                        <div>Nincs</div>
                }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3" for="">Dohányzás:</label>
                        <div class="col-sm-5">
                            @if (Model.houseDetails.Smoking == true)
                        {
                            <div> Megengedett </div>
                    }
                    else
                    {
                        <div>Nem megengedett</div>
                }
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label class="col-sm-3" for="">Leírás:</label>
                    </div>
                    <p></p>
                    <textarea rows="6" cols="30" readonly>
            @Model.houseDetails.Details
            </textarea>
                </div>


                <div class="card col-sm-4">
                    <img src="/Uploads/@Model.userSeller.Id/@Model.userSeller.Image" alt="John" style="width:100%">
                    <h1>@Model.userSeller.FullName</h1>
                    <p class="title">@Model.userSeller.PhoneNumber</p>
                    <p class="title">@Model.userSeller.Email</p>

                </div>

            </form>

        </div>



