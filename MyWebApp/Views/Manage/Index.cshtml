@model IndexViewModel
@{
    ViewData["Title"] = "Profil";
    ViewData.AddActivePage(ManageNavPages.Index);
    string userId = ViewData["UserId"] as string;
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="">Felhasználónév:</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Megerősítő e-mail küldése</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Telefonszám:</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Születési dátum:</label>
                <input asp-for="BirthDate" class="form-control" />            
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-default">
            </div>
        </div>
        <div class="form-group col-md-5">
            <label for="">Profilkép feltöltése: </label>
            <img src="~/Uploads/@userId/@Model.ProfilePicture" class="img-thumbnail" width="300" />
            <input type="hidden" asp-for="ProfilePicture" />
        </div>
        <div class="form-group">
            <input type="file" name="ProfilePictureFile" /><br />
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
